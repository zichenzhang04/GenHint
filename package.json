{
  "name": "genhint",
  "displayName": "GenHint",
  "description": "VSCode extension to generate code from comments using LLM",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:genhint.generateCode"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "genhint.generateHint",
        "title": "generateHints"
      },
      {
        "command": "genhint.generateElaboration",
        "title": "generateElaborations"
      },
      {
        "command": "genhint.generateReview",
        "title": "generateReviews"
      }
    ],
    "keybindings": [
      {
        "command": "genhint.generateHint",
        "key": "cmd+shift+g",
        "when": "editorTextFocus",
        "mac": "cmd+shift+g",
        "win": "ctrl+shift+g",
        "linux": "ctrl+shift+g"
      },
      {
        "command": "genhint.generateElaboration",
        "key": "cmd+shift+e",
        "when": "editorTextFocus",
        "mac": "cmd+shift+e",
        "win": "ctrl+shift+e",
        "linux": "ctrl+shift+e"
      },
      {
        "command": "genhint.generateReview",
        "key": "cmd+shift+r",
        "when": "editorTextFocus",
        "mac": "cmd+shift+r",
        "win": "ctrl+shift+r",
        "linux": "ctrl+shift+r"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "dotenv": "^16.4.5",
    "eslint": "^9.9.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "groq-sdk": "^0.7.0"
  }
}
